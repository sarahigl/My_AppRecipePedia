<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/recCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contentRectangleR"
            android:layout_width="382dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/white_rounded_corners"
            android:elevation="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageRec"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/ic_launcher_background"
                app:shapeAppearanceOverlay="@style/roundedImageView"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitreRec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorLink="@color/jaune"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibHeart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/selector_favoritelist_item"
                    android:button="@null"
                    android:scaleType="fitStart" />

            </LinearLayout>

            <!--<ImageButton
            android:id="@+id/imageButton"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:background="@drawable/selector_favoritelist_item"
            android:button="@null"
            app:useMaterialThemeColors="false" />-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>