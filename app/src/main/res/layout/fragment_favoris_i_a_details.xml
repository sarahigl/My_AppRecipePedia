<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.IA.FavorisIADetailsFragment">

    <ImageButton
        android:id="@+id/ivReturnFav"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:contentDescription="retour bouton"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:tint="@color/jaune" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/contentRectangleRFavDetIA"
                android:layout_width="382dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/white_rounded_corners"
                android:backgroundTint="@color/jaunePale"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/tvMsg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorLink="@color/jaune"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/ibHeartFavDetIA"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/ic_heart_filled"
                    android:button="@null"
                    android:contentDescription="@string/favorite_button_description"
                    android:scaleType="fitStart" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>